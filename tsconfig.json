{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
